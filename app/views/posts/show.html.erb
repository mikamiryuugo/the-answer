<div id="like_button">
  <%= render 'post_likes/post_like_form', post: @post %>
</div>
<div class="container">
  <div class="card">
    <div class="card-header bg-info text-white">
        <h4><%= @post.question_title %></h4>
    </div>
    <div class="card-body">
        <p class="card-text"><%= simple_format(@post.answer) %></p>
    </div>
  </div>
  <%= link_to "戻る", :back %>
  <% if @post.user == current_user %>
    <%= link_to "編集", edit_post_path(@post), class: 'btn btn-outline-info' %>
    <%= link_to "削除" , post_path(@post), class: 'btn btn-outline-info', method: :delete %>
  <% end %>
</div>
