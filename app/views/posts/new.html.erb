<div class="container">
  <div class="d-flex align-items-center">
    <h1>回答例の投稿</h1>
  </div>
  <%= form_for @post do |f| %>
    <div class="form-group">
      <%= f.label :question_title, '質問されたこと' %>
      <%= f.text_field :question_title, class: 'form-control' %>
      <%= @post.errors.full_messages_for(:question_title).first %>
    </div>
    <div class="form-group">
      <%= f.label :answer, '回答テンプレート' %>
      <%= f.text_area :answer, class: 'form-control', size: "1x5" %>
      <%= @post.errors.full_messages_for(:answer).first %>
    </div>
    <%= f.submit '投稿', class: 'btn btn-info btn-block' %>
  <% end %>
</div>